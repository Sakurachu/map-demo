<script>
  function handleClick(menuName, url) {
    if (menuName === "Humsun") {
      // 弹出密码输入框，进行验证
      var password = prompt("请输入密码：", "");
      if (password != null) {
        // 这里假设密码是 "Sakura"，你可以根据实际情况修改
        if (password === "Jinzhe.Liao") {
          window.open("http://www.hsdynam.com:808/", '_blank');
