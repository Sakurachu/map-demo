<script>
  function handleClick(menuName, url) {
    if (menuName === "Humsun") {
      // 弹出密码输入框，进行验证
      const input = document.createElement("input");
      input.setAttribute("type", "password");
      input.setAttribute("placeholder", "请输入密码：");
      input.style.display = "block";
      input.style.margin = "0 auto";
      input.style.width = "200px";
      input.style.height = "30px";
      document.body.appendChild(input);
      // var password = prompt("请输入密码：", "");
      // 这里假设密码是 "Sakura"，你可以根据实际情况修改
      input.onchange = function() {
        // 密码正确，跳转链接
        if (input.value === "Jinzhe.Liao") {
          window.open("http://www.hsdynam.com:808/", '_blank');
        } else {
          // 密码错误，提示错误信息
          alert("密码错误，无法跳转！若非本站点管理员请不要随意点击尝试，多次失败可能会被拉黑IP，导致后续无法使用该导航页！");
        }
        // 删除输入框
        input.remove();
      };
    } else {
      // 直接跳转链接
      window.open(menu.url, "_blank");
    }

  }
</script>

<h4 class="text-gray"><i class="linecons-tag" style="margin-right: 7px;" id="<%= e.name %>"></i><%= e.name %></h4>
<div class="row">
  <% menus.forEach(function(menu) { %>
  <div class="col-sm-3">
    <div class="xe-widget xe-conversations box2 label-info" onclick="handleClick('<%= menu.name %>', '<%= menu.url %>')" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="<%= menu.url %>">
      <div class="xe-comment-entry">
        <a class="xe-user-img">
          <img data-src="<%= menu.img %>" class="lozad img-circle" width="40">
        </a>
        <div class="xe-comment">
          <a href="#" class="xe-user-name overflowClip_1">
            <strong><%= menu.name %></strong>
          </a>
          <p class="overflowClip_2"><%= menu.description %></p>
        </div>
      </div>
    </div>
  </div>
  <% }) %>
</div>
